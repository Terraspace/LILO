<?xml version="1.0" encoding="utf-8"?>
	<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cocoon="http://cocoon.io/ns/1.0" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.terraspace.starfire" version="1.0.0">
		<name>Project Starfire</name>
		<description>Project Starfire</description>
		<author email="john@terraspace.co.uk" href="https://cocoon.io">John Hankinson</author>
		<content src="index.html"/>
		<plugin name="cordova-plugin-whitelist" version="1"/>
		<access origin="*"/>
		<allow-navigation href="*"/>
		<allow-navigation href="http://*/*"/>
		<allow-intent href="http://*/*"/>
		<allow-intent href="https://*/*"/>
		<allow-intent href="tel:*"/>
		<allow-intent href="sms:*"/>
		<allow-intent href="mailto:*"/>
		<allow-intent href="geo:*"/>
		<platform name="android">
			<allow-intent href="market:*"/>
			<preference name="enabled" value="false"/>
			<preference name="Orientation" value="landscape"/>
			<preference name="Fullscreen" value="true"/>
			<preference name="CocoonSplashScaleMode" value="scaleAspectFill"/>
		</platform>
		<platform name="ios">
			<allow-intent href="itms:*"/>
			<allow-intent href="itms-apps:*"/>
			<preference name="enabled" value="true"/>
			<preference name="Orientation" value="landscape"/>
			<preference name="Fullscreen" value="true"/>
			<preference name="CocoonSplashScaleMode" value="scaleAspectFill"/>
		</platform>
		<plugin name="com.ludei.canvasplus.ios" spec="2.3.8">
			<variable name="CAMERA_USAGE_DESCRIPTION" value="Any data recorded through thia application is used in accordance with the privacy policy and will not be shared with any 3rd party." />
		</plugin>
		<plugin name="com.ludei.canvasplus.ios" spec="2.3.8"/>
		<plugin name="com.ludei.canvasplus.android" spec="2.3.8"/>
		<plugin name="cordova-plugin-device" spec="*"/>
		<plugin name="cordova-plugin-device-orientation" spec="*"/>
		<plugin name="cordova-plugin-dialogs" spec="*"/>
		<plugin name="cordova-plugin-file" spec="*"/>
		<plugin name="cordova-plugin-legacy-whitelist" spec="*"/>
		<plugin name="cordova-plugin-network-information" spec="*"/>
		<preference name="Orientation" value="default"/>
		<preference name="Fullscreen" value="true"/>
		<preference name="cocoon-version" value="2.1.0"/>
		<preference name="CocoonSplashScaleMode" value="scaleAspectFill"/>
	</widget>